    %body
        #main-content.wrapper

        %script{:id => "main-layout", :type => "text/template"}
            .nav-content
            .content.container
        %script{:id => "home-page", :type => "text/template"}
            .row
                .col-xs-12
                    %h1.hero-txt Hacker Olympics
                    .event-container
                .format-container
                .col-md-6
                    %h3 Schedule
                    .schedule-container
                    %h3 Sponsors
                    .sponsors
                        %img.img-thumbnail{:src => 'img/sponsors/twilio.svg', :width => 160}
                        %img.img-thumbnail{:src => 'img/sponsors/send-grid.png', :width => 160}
                        %img.img-thumbnail{:src => 'img/sponsors/firebase.png', :width => 160}
        %script{:id => "challenges-page", :type => "text/template"}
            .rules-container
            .row
                .col-md-offset-1.challenge-row
                    %h3 Challenges
                    .challenges-container
        %script{:id => "navbar", :type => "text/template"}
            %nav.navbar.navbar-default{:role => "navigation"}
                .navbar-header
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                %a.navbar-brand{:href => "#"}
                    %img{:src => 'img/logo-home.png', :width => 44}
                .collapse.navbar-collapse.navbar-ex1-collapse
                    %ul.nav.navbar-nav
                        %li.active
                            <a class="nav-link" href="#" data-slug="home">Home </a>
                        %li
                            <a class="nav-link" href="#" data-slug="rules">Challenges </a>
                        %li
                            <a class="nav-link" href="leaderboard" data-slug="leaderboard">Leaderboard </a>
                    %p.navbar-text.pull-right
                        <a href="https://www.eventbrite.co.uk/e/hacker-olympics-london-tickets-960465779" class="btn btn-warning">Register Now</a>
            <div class="event-card <%= event_info[0].city_slug %>">
            <div class="event-info">
            %span <%= event_info[0].title %>
            %span <%= event_info[0].when %>
            %span <%= event_info[0].where %>
            </div>
            </div>
        %script{:id => "schedule-item", :type => "text/template"}
            .row.well
                .col-xs-3
                    %span.time <%= scheduletimes %>
                .col-xs-9
                    %span <%= scheduleevent %>
        %script{:id => "format-info", :type => "text/template"}
            .col-md-6
                %h3 Welcome
                .well 
                    <%= what %> 
                    <a href="https://www.eventbrite.co.uk/e/hacker-olympics-london-tickets-960465779" class="register-btn btn btn-lg btn-warning">Register Now</a>

                %h3 Format
                .well <%= how %>
            .col-md-6
                %h3 Where
                .well
                    %b <%= where %>
                    %p <%= address %>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2482.2156162026286!2d-0.08086599999999998!3d51.527605000000015!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48761cbadd0ebb53%3A0x20694e9b38ebbe9!2sShoreditch+Village+Hall!5e0!3m2!1sen!2sus!4v1400525094421" width="400" height="300" frameborder="0" style="border:0"></iframe>

        %script{:id => "sub-view", :type => "text/template"}
            .content
        %script{:id => "challenge-item", :type => "text/template"}
            .row
                .col-md-9
                    .panel.panel-success
                        .panel-heading
                            %h3.panel-title <%= challengetitle %>
                        .panel-body
                            <%= rules %>
                        .panel-footer
                            %b Scoring: 
                            %span <%= scoring %>
                            <% if (typeof(resourceurl) != "undefined") { %>
                            %hr
                            %b Resource: 
                            <a href= "<%= resourceurl %>" target="_blank"> <%= resourcetitle %> </a>
                            <% } %>
                            
        %script{:id => "rules-item", :type => "text/template"}
            .row
                .col-xs-1
                    <% if (typeof(rulenumber) != "undefined") { %>
                    %h2.num <%= rulenumber %>
                    <% } %>
                .col-xs-11.col-md-6
                    <% if (typeof(rulenumber) != "undefined") { %>
                    %p.rule <%= rule %>
                    <% } else { %>
                    %h3 <%= rule %>
                    <% } %>

